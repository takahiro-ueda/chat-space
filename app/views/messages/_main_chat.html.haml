.main_chat
    .chat-header
        .chat-header__left-box
            %p.chat-header__left-box__group_id
                = @group.name
            %ul.chat-header__left-box__menbers_list
                ="Member:" + @group.users.pluck(:name).join(",")
        .chat-header__right-box       
            %p.chat-header__right-box__edit_btn
                = link_to edit_group_path(@group) do
                    Edit
    .chat-message
        = render @messages
        
    .chat-footer
        = form_for [@group, @message] do |f|
            .new_message.input-box
                = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
                = f.label :image, class: 'input-box__image' do
                    = icon('fas', 'image', class: 'icon')
                    = f.file_field :image, class: 'input-box__image__file'
            = f.submit 'Send', class: 'submit-btn'
